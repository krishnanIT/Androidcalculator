<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#232223"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        android:textColor="#0000ff"
        android:background="#169AAB"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center|right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRigntOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/ac"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="26dp"
            android:text="AC"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/Clean"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="42dp"
            android:text="C"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/pow"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="42dp"
            android:text="^"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="42dp"
            android:text="+"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <!--SECOND LINE -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/SEVEN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="7"
            android:textStyle="bold"
            android:textSize="42dp"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="8"
            android:textStyle="bold"
            android:textSize="42dp"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="42dp"
            android:text="9"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/multiple"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="42dp"
            android:text="x"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <!--3 - LINE -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="4"
            android:textStyle="bold"
            android:textSize="42dp"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="5"
            android:textStyle="bold"
            android:textSize="42dp"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="42dp"
            android:text="6"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/subract"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="42dp"
            android:text="-"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <!--4 - LINE -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="1"
            android:textStyle="bold"
            android:textSize="42dp"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="2"
            android:textStyle="bold"
            android:textSize="42dp"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="42dp"
            android:text="3"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/division"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="42dp"
            android:text="/"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <!-- 5 - LINE -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="."
            android:textStyle="bold"
            android:textSize="42dp"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="0"
            android:textStyle="bold"
            android:textSize="42dp"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/ans"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="42dp"
            android:text="="
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/presentage"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="42dp"
            android:text="%"
            android:layout_margin="10dp"
            />
    </LinearLayout>






</LinearLayout>

